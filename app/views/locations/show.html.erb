<div class="container">
	<div class="center">
	<p id="notice"><%= notice %></p>
		<div class="row">
		</div>
		<div class="row" style="text-align: left;">
			<div class="span6 offset1 ">
				<div class="info_box learn">
					<div class="row">
						<div class="span2">
							<img class="action_icon" src="/assets/learnicon.png" />
							<div class="address" style="margin-top: .25em;">
							  	<%= @location.name %><br>
							</div>
						</div>
						<div class="span3" id="subject_description_box">
							<%= render :inline => raw(@location.description) %>
						</div>
					</div>
					<div id="map" style="margin-top: 1em; margin-bottom: 1em;"></div>
				</div>
				<div class="info_box admin">
					<div class="row">
						<div class="span5">
							<h2 style="display: inline;">Email Notifications</h2>
							<%= render 'subscribe_form' %>
							<p>Sign up to receive an email when there is new information on this location. Emails are sent out once a week and only if there is new information.</p>
						</div>
					</div>
				</div>
			</div>
			<div class="span4 info" style="text-align:left;">
				<div class="info_box call">
					<div class="upper">
						<img class="action_icon" src="/assets/phoneicon.png" /><h1 style="display:inline;">CALL</h1>
					</div>
					<div class="lower">
						<div class="infoSet_below">
                                                  <br><%= @content.app_phone_number %>
		    				<br>call-in code: <%= @location.property_code %>
						</div>
					</div>
				</div>

				<% if @location.has_numerical_responses? || @location.has_voice_messages? %>
					<% if @numerical_responses_exist %>
            <div class="info_box listen">
                <div class="upper listen_bar">
                  <h1 style="display:inline;">OPINIONS</h1>
                </div>
                <div class="lower">
                  <% @numerical_responses.each do |single_numerical| %>
                    <div class="question">
                      <div class="row-fluid">
                        <div class="span12">
                          <div class="text">
                            <%= single_numerical.question_text %>
                          </div>

                          <% single_numerical.response_hash.each_pair do |choice, count_of_choice| %>

                              <div class="span2">
                                <% if choice == "Repair" %>
                                  <img src="/assets/Repair.png" />
                                <% elsif choice == "Remove" %>
                                  <img src="/assets/Demo.png" />
                                <% end %>
                              </div>
                              <div class="span9">
                              <div class="progress progress-info" style="margin-top: .5em; margin-bottom: 1em;">
                                <div class="bar" style="width: <%= count_of_choice*10 %>%">
                                  <h3><%= count_of_choice %>&nbsp;&nbsp;<%= choice %></h3>
                                </div>
                              </div>
                            </div>
                          <% end %>

                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
            </div>
					<% end %>

					<div class="info_box listen">
						<div class="upper" style="padding-bottom: 1.5em;">
							<img class="action_icon" src="/assets/listenicon.png" /><h1 style="display:inline;">MESSAGES</h1>
						</div>
						<div class="lower">
							<% @user_voice_messages.each do |message| %>
								<div class="vmessage">
									<div class="row-fluid">
										<div class="span12" >
											<div>
                        <style>
                          p { clear: both; }
                        </style>
                        <div class="audiojsZ">
                          <audio controls>
                            <source src="<%= message.voice_file_url %>.mp3" type="audio/mpeg">
                            <source src="<%= message.voice_file_url %>.wav" type="audio/wav">
                            <a href="<%= message.voice_file_url %>">Click here to play voice message</a>
                          </audio>
                        </div>
											</div>
											<div class="voiceAnnotate">
												<strong><%= @choice %></strong>
												date: <strong><%= message.created_at.to_date %></strong>
                        <% if message.call.consented_to_callback %>
                          &nbsp;
  												from: <strong><%= message.obscured_phone_number %></strong>
                        <% end %>
											</div>
										</div>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				<% else %>
				<div class="info_box listen">
					<img class="action_icon" src="/assets/listenicon.png" /><h1 style="display:inline;">LISTEN</h1><br><br>
					<p>There is no neighborhood feedback on this property yet.</p>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
